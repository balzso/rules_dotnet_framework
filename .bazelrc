# ============================================================================
# MODULE.bazel (Bzlmod) Configuration
# ============================================================================
# This project now supports MODULE.bazel! 
# To use MODULE.bazel instead of WORKSPACE, enable bzlmod:
common --enable_bzlmod

# If you need to use WORKSPACE (legacy), uncomment these lines:
# common --noenable_bzlmod
# common --enable_workspace
# ============================================================================

# Show more information during builds
common --announce_rc

# Verbose failures for debugging
build --verbose_failures

# Docker Sandbox Mode
build:docker-sandbox --host_javabase=@rbe_default//java:jdk
build:docker-sandbox --javabase=@rbe_default//java:jdk
build:docker-sandbox --crosstool_top=@rbe_default//cc:toolchain
build:docker-sandbox --experimental_docker_image=marketplace.gcr.io/google/rbe-ubuntu16-04
build:docker-sandbox --spawn_strategy=docker --strategy=Javac=docker --genrule_strategy=docker
build:docker-sandbox --define=EXECUTOR=remote
build:docker-sandbox --experimental_docker_verbose
build:docker-sandbox --experimental_enable_docker_sandbox